<Page x:Class="Servic.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Servic.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage" Loaded="Page_Loaded" ShowsNavigationUI="False">

    <Grid Background="White" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <StackPanel>
                <TextBlock Text="Логин"></TextBlock>
                <TextBox x:Name="txbLogin"></TextBox>
            </StackPanel>
            <StackPanel Margin="0 10 0 10">
                <TextBlock Text="Пароль"></TextBlock>
                <PasswordBox x:Name="txbPass"></PasswordBox>
            </StackPanel>
            <Button Width="100" Height="20" Click="Button_Click">Войти</Button>
        </StackPanel>
    </Grid>
</Page>
