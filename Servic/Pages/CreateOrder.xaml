<Page x:Class="Servic.Pages.CreateOrder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Servic.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateOrder">

    <Grid Background="White">
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Margin="20">
                <TextBlock Text="Название оборудования"></TextBlock>
                <TextBox Text="{Binding climateTechType}" Width="200" x:Name="txbObject"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="20">
                <TextBlock Text="Модель оборудования"></TextBlock>
                <TextBox Text="{Binding climateTechModel}" Width="200" x:Name="txbModel"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="20">
                <TextBlock Text="Описание проблемы"></TextBlock>
                <TextBox Text="{Binding proplemDescryption}" Width="200" x:Name="txbDescr"></TextBox>
            </StackPanel>
            <Button Click="Button_Click" Width="200" Height="30" Content="Создать заказ"></Button>
        </StackPanel>
       
    </Grid>
</Page>
